{
  "manifest_version": 2,
  "name": "Moeradar",
  "version": "1.0",
  "description": "Add anime directly to sonarr/radarr",
  "icons": { "48": "images/egg.png" },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://myanimelist.net/*"],
      "js": ["site_scripts/mal_script.js"]
    },
    {
      "matches": ["*://anilist.co/*"],
      "js": ["site_scripts/anilist_script.js"]
    },
    {
      "matches": ["*://kitsu.io/*"],
      "js": ["site_scripts/kitsu_script.js"]
    },
    {
      "matches": ["*://anidb.net/*"],
      "js": ["site_scripts/anidb_script.js"]
    },
    {
      "matches": ["*://www.anisearch.com/*"],
      "js": ["site_scripts/anisearch_script.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "moeradar@nightcloud.moe",
      "strict_min_version": "57.0a1"
    }
  },
  "commands": {
    "send-key": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Send request to Sonarr/Radarr"
    }
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Moeradar"
  },
  "permissions": [
    "notifications",
    "storage",
    "<all_urls>"
  ]
}
